<!DOCTYPE html>
<html lang="en">
[% base = request.uri_base %]

<head>

<meta charset="[% settings.charset %]" />

<title>MathBombs</title>

<link rel="stylesheet" href="[% request.uri_base %]/bootstrap/css/bootstrap.css" />
<link rel="stylesheet" href="[% request.uri_base %]/css/style.css" />
<link rel="icon" href="[% base %]/favicon.ico" />

<script src="https://unpkg.com/react@16/umd/react.development.js" crossorigin></script>
<script src="https://unpkg.com/react-dom@16/umd/react-dom.development.js" crossorigin></script>
<script src="https://unpkg.com/babel-standalone@6/babel.min.js" crossorigin></script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js" type="text/javascript"></script>

<script src="[% request.uri_base %]/bootstrap/js/bootstrap.min.js"></script>

<script type="text/x-mathjax-config">
    MathJax.Hub.Config({tex2jax: {inlineMath: [['$','$'], ['\\(','\\)']]}});
</script>
<!--
<script type="text/javascript" src="http://cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-AMS-MML_HTMLorMML">
-->
<script type="text/javascript" src="[% base %]/mathjax/MathJax.js?config=TeX-AMS_HTML">
</script>

<script type="text/babel" src="[% request.uri_base%]/javascripts/components.js"></script>
<script type="text/javascript" src="[% request.uri_base%]/javascripts/mathsheets.js"></script>
<script type="text/javascript" src="[% request.uri_base%]/javascripts/fire.js"></script>

</head>

<body style="background-image: url('[% request.uri_base %]/images/pleiades.jpg')">

  <div class="container well" id="page">

    <div class="navbar">
      <div class="navbar-inner">
        <a class="brand" href="[% base %]">[% settings.appname %]</a>
        <ul class="nav">
          <li class=""><a href="[% base %]">Home</a></li>
          [% IF session.teacher %]
          <li class=""><a href="[% base %]/teacher/students">Students</a></li>
          [% END %]
          <li class=""><a href="[% base %]/help">Help</a></li>
        </ul>
        [% IF session.teacher %]
        <ul class="nav pull-right">
          <li id="fat-menu" class="dropdown">
            <a href="#" id="drop1" role="button" class="dropdown-toggle" data-toggle="dropdown">[% session.teacher %] <b class="caret"></b></a>
            <ul class="dropdown-menu" role="menu" aria-labelledby="drop1">
              <li><a tabindex="-1" href="[% base %]/logout">Logout</a></li>
              <li><a tabindex="-1" href="[% base %]/teacher/profile">Edit profile</a></li>
            </ul>
          </li>
        </ul>
        [% ELSE %]
        <ul class="nav pull-right">
          <li>
            <a href="[% base %]/login">login</a>
          </li>
        </ul>
        [% END %]
      </div>
    </div>

    [% content %]

  </div>

</body>
</html>
